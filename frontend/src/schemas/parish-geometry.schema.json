{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adinsights.dev/schemas/parish-geometry.schema.json",
  "title": "ParishGeometry",
  "type": "object",
  "required": ["type", "features"],
  "properties": {
    "type": {
      "type": "string",
      "const": "FeatureCollection"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "geometry", "properties"],
        "properties": {
          "type": {
            "type": "string",
            "const": "Feature"
          },
          "id": {
            "type": ["string", "number"]
          },
          "geometry": {
            "type": ["object", "null"],
            "required": ["type", "coordinates"],
            "properties": {
              "type": { "type": "string" },
              "coordinates": {}
            },
            "additionalProperties": true
          },
          "properties": {
            "type": ["object", "null"],
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
