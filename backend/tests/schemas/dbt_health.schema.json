{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "dbt Health Response",
  "type": "object",
  "required": [
    "component",
    "run_results_path",
    "generated_at",
    "failing_models",
    "failing_models_detail",
    "status"
  ],
  "properties": {
    "component": {"enum": ["dbt"]},
    "run_results_path": {"type": "string"},
    "generated_at": {"type": "string"},
    "failing_models": {
      "type": "array",
      "items": {"type": "string"}
    },
    "failing_models_detail": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "unique_id": {"type": ["string", "null"]},
          "status": {"type": ["string", "null"]},
          "message": {"type": ["string", "null"]},
          "adapter_response": {"type": ["object", "null"]}
        },
        "additionalProperties": true
      }
    },
    "status": {"enum": ["ok"]},
    "stale": {"type": "boolean"},
    "detail": {"type": "string"}
  },
  "additionalProperties": true
}
