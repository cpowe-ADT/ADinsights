{
  "$themes": [
    {
      "id": "light",
      "name": "Light",
      "selectedTokenSets": {
        "global": "source",
        "light": "enabled",
        "dark": "disabled"
      }
    },
    {
      "id": "dark",
      "name": "Dark",
      "selectedTokenSets": {
        "global": "source",
        "light": "disabled",
        "dark": "enabled"
      }
    }
  ],
  "$metadata": {
    "project": "ADinsights",
    "notes": "Tokens Studio / Figma Variables compatible token sets. Use 'light' and 'dark' themes."
  },
  "global": {
    "color": {
      "neutral": {
        "0": {"$type": "color", "$value": "#FFFFFF"},
        "50": {"$type": "color", "$value": "#F9FAFB"},
        "100": {"$type": "color", "$value": "#F3F4F6"},
        "200": {"$type": "color", "$value": "#E5E7EB"},
        "300": {"$type": "color", "$value": "#D1D5DB"},
        "400": {"$type": "color", "$value": "#9CA3AF"},
        "500": {"$type": "color", "$value": "#6B7280"},
        "600": {"$type": "color", "$value": "#4B5563"},
        "700": {"$type": "color", "$value": "#374151"},
        "800": {"$type": "color", "$value": "#1F2937"},
        "900": {"$type": "color", "$value": "#111827"}
      },
      "accent": {
        "primary": {"$type": "color", "$value": "#2563EB"},
        "primaryHover": {"$type": "color", "$value": "#1D4ED8"}
      },
      "channel": {
        "meta": {"$type": "color", "$value": "#1877F2"},
        "google": {"$type": "color", "$value": "#34A853"}
      },
      "status": {
        "success": {"$type": "color", "$value": "#16A34A"},
        "warning": {"$type": "color", "$value": "#F59E0B"},
        "danger": {"$type": "color", "$value": "#DC2626"},
        "info": {"$type": "color", "$value": "#0EA5E9"}
      }
    },
    "radius": {
      "sm": {"$type": "borderRadius", "$value": "4px"},
      "md": {"$type": "borderRadius", "$value": "8px"}
    },
    "space": {
      "4": {"$type": "dimension", "$value": "4px"},
      "8": {"$type": "dimension", "$value": "8px"},
      "12": {"$type": "dimension", "$value": "12px"},
      "16": {"$type": "dimension", "$value": "16px"},
      "24": {"$type": "dimension", "$value": "24px"},
      "32": {"$type": "dimension", "$value": "32px"}
    },
    "shadow": {
      "xs": {
        "$type": "boxShadow",
        "$value": [
          {"x": "0", "y": "1", "blur": "2", "spread": "0", "color": "#0000001A"}
        ]
      },
      "s": {
        "$type": "boxShadow",
        "$value": [
          {"x": "0", "y": "1", "blur": "3", "spread": "0", "color": "#0000001F"},
          {"x": "0", "y": "1", "blur": "2", "spread": "-1", "color": "#00000014"}
        ]
      },
      "m": {
        "$type": "boxShadow",
        "$value": [
          {"x": "0", "y": "4", "blur": "6", "spread": "-1", "color": "#00000026"},
          {"x": "0", "y": "2", "blur": "4", "spread": "-2", "color": "#0000001F"}
        ]
      },
      "l": {
        "$type": "boxShadow",
        "$value": [
          {"x": "0", "y": "10", "blur": "15", "spread": "-3", "color": "#00000033"},
          {"x": "0", "y": "4", "blur": "6", "spread": "-4", "color": "#00000026"}
        ]
      }
    },
    "motion": {
      "duration": {
        "fast": {"$type": "duration", "$value": "150ms"},
        "base": {"$type": "duration", "$value": "200ms"}
      },
      "easing": {
        "standard": {"$type": "cubicBezier", "$value": "cubic-bezier(0.2, 0, 0, 1)"},
        "emphasized": {"$type": "cubicBezier", "$value": "cubic-bezier(0.2, 0, 0, 1)"}
      }
    },
    "font": {
      "families": {
        "sans": {"$type": "fontFamilies", "$value": "Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif"}
      },
      "weights": {
        "regular": {"$type": "fontWeights", "$value": "400"},
        "semibold": {"$type": "fontWeights", "$value": "600"},
        "bold": {"$type": "fontWeights", "$value": "700"}
      },
      "sizes": {
        "12": {"$type": "fontSizes", "$value": "12px"},
        "14": {"$type": "fontSizes", "$value": "14px"},
        "16": {"$type": "fontSizes", "$value": "16px"},
        "20": {"$type": "fontSizes", "$value": "20px"},
        "24": {"$type": "fontSizes", "$value": "24px"},
        "32": {"$type": "fontSizes", "$value": "32px"}
      },
      "lineHeights": {
        "tight": {"$type": "lineHeights", "$value": "1.2"},
        "normal": {"$type": "lineHeights", "$value": "1.4"},
        "loose": {"$type": "lineHeights", "$value": "1.6"}
      },
      "typography": {
        "body": {
          "$type": "typography",
          "$value": {
            "fontFamily": "{font.families.sans}",
            "fontWeight": "{font.weights.regular}",
            "fontSize": "{font.sizes.14}",
            "lineHeight": "{font.lineHeights.normal}"
          }
        },
        "title": {
          "$type": "typography",
          "$value": {
            "fontFamily": "{font.families.sans}",
            "fontWeight": "{font.weights.bold}",
            "fontSize": "{font.sizes.24}",
            "lineHeight": "{font.lineHeights.tight}"
          }
        },
        "caption": {
          "$type": "typography",
          "$value": {
            "fontFamily": "{font.families.sans}",
            "fontWeight": "{font.weights.regular}",
            "fontSize": "{font.sizes.12}",
            "lineHeight": "{font.lineHeights.normal}"
          }
        }
      }
    }
  },
  "light": {
    "color": {
      "bg": {
        "default": {"$type": "color", "$value": "{color.neutral.0}"},
        "subtle": {"$type": "color", "$value": "{color.neutral.50}"},
        "elevated": {"$type": "color", "$value": "{color.neutral.0}"}
      },
      "fg": {
        "default": {"$type": "color", "$value": "{color.neutral.900}"},
        "muted": {"$type": "color", "$value": "{color.neutral.600}"},
        "inverted": {"$type": "color", "$value": "{color.neutral.0}"}
      },
      "border": {
        "default": {"$type": "color", "$value": "{color.neutral.200}"},
        "muted": {"$type": "color", "$value": "{color.neutral.100}"}
      },
      "accent": {
        "default": {"$type": "color", "$value": "{color.accent.primary}"},
        "hover": {"$type": "color", "$value": "{color.accent.primaryHover}"}
      }
    }
  },
  "dark": {
    "color": {
      "bg": {
        "default": {"$type": "color", "$value": "{color.neutral.900}"},
        "subtle": {"$type": "color", "$value": "#0B1220"},
        "elevated": {"$type": "color", "$value": "{color.neutral.800}"}
      },
      "fg": {
        "default": {"$type": "color", "$value": "{color.neutral.0}"},
        "muted": {"$type": "color", "$value": "{color.neutral.300}"},
        "inverted": {"$type": "color", "$value": "{color.neutral.900}"}
      },
      "border": {
        "default": {"$type": "color", "$value": "{color.neutral.700}"},
        "muted": {"$type": "color", "$value": "{color.neutral.800}"}
      },
      "accent": {
        "default": {"$type": "color", "$value": "#60A5FA"},
        "hover": {"$type": "color", "$value": "#3B82F6"}
      }
    }
  }
}

